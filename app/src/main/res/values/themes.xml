<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Final_project" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/themeColor</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCREEN">
        <item name="android:background">#FFFFFF</item>
    </style>


    <!-- Texts Background if light mode on -->
    <style name="Text">
        <item name="android:textColor">#000</item>
    </style>
    <style name="btn">
        <item name="android:background">@color/button</item>
    </style>

    <!-- button Background if light mode on -->
    <style name="Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- cardview Background if light mode on -->
    <!-- cardview Background if light mode on -->
    <style name="Cardview_guideline">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- cardview Background if light mode on -->
    <style name="Cardview_layout">

        <item name="android:background">@drawable/main_text_style</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="Cardview">

        <item name="android:background">@color/white</item>
        <item name="android:textColor">#000000</item>

    </style>
    <style name="Textview">


        <item name="android:textColor">#000000</item>

    </style>


</resources>